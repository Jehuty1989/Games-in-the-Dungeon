<div style="background-image: url(https://i.redd.it/e0deevjvqth71.jpg); height: 100vh; background-size: cover;">


 <form class="col-6" style="padding-top: 200px; padding-left: 50px;">
    <h1 style="color:white;">Games in the Dungeon</h1>
    <div class="col-4 mt-4">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs" style="color: white;">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
        <div class="form-actions" style="display: flex; flex-direction: column;">
          <%= f.button :submit, "Log in", class: "btn btn-dark mt-3"%>
          <%= render "devise/shared/links" %>
        </div>
          <% end %>
 </form>

     </div>

</div>
