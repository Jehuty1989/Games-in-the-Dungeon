<div class="name">
  <h1>Welcome to <%= current_user == @user ? "your" : "#{@user.username}s" %> dungeon</h1>
</div>

<div class="card text-center col-10">
  <div class="card-header">
    <p><%= current_user == @user ? "Your" : "#{@user.username}s" %> rented games</p>
  </div>
  <div class="card-body">


  </div>
  <div class="card-footer text-muted">
  </div>
</div>


<div class="container col-8">
  <p><%= current_user == @user ? "Your" : "#{@user.username}s" %> rented games</p>
  <% Booking.where(renter_id: current_user.id).each do |booking| %>
    <div class="container d-flex card-product">
      <% boardgame = Boardgame.find(booking.boardgame_id) %>
      <%= cl_image_tag boardgame.photo.key %>
      <div class="info">
        <h2><%= boardgame.name %></h2>
        <p><%= boardgame.genre %></p>
        <p><%= booking.rent_from %> - <%= booking.rent_till %></p>
      </div>
      <div class="btn_see_more">
        <p><%= link_to "Cancel", boardgame_booking_path(booking), method: :delete, data: { confirm: "Cancel this booking?" }, class: "btn btn-danger" %></p>
        <p><%= link_to 'See more', boardgame_path(boardgame), class: "btn btn-light" %></p>
      </div>
    </div>
  <% end %>
</div>

<div class="container col-8">
  <p><%= current_user == @user ? "Your" : "#{@user.username}s" %> posted games</p>
  <% @user.boardgames.each do |boardgame| %>
    <div class="card-product">
         <%= cl_image_tag boardgame.photo.key %>
        <div class="info">
          <h2><%= boardgame.name %></h2>
          <p>Genre: <%= boardgame.genre %></p>
        </div>

      <div class="btn_see_more">
        <% if current_user == @user %>
          <p><%= link_to "Remove", boardgame_path(boardgame), style: "text-decoration: none; color: black;", method: :delete, data: { confirm: "Are you sure" }, class: "btn btn-danger" %></p>
        <% end %>
        <p><%= link_to 'See more', boardgame_path(boardgame), class: "btn btn-light" %></p>
      </div>
    </div>
  <% end %>
</div>
